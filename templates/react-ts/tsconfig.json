{
  "include": [
    "src/*",
    "src/**/*",
    "tests/*",
    "tests/**/*"
  ],
  "compilerOptions": {
    "moduleResolution": "node",
    "types": ["@socketsupply/socket"],
    "target": "es2022",
    "module": "es2022",
    "lib": ["es2022", "es6", "dom"],

    "removeComments": false,

    "checkJs": true,
    "allowJs": true,
    "noEmit": true,

    "alwaysStrict": true,
    "strictNullChecks": false,

    "declaration": true,
    "declarationMap": true,

    "baseUrl": "."
  }
}
